{
    "_description": "FSDP2 basic configuration for swift training (similar to DeepSpeed zero3)",
    "_note": "gradient_checkpointing uses swift's --gradient_checkpointing parameter",
    "_requires": "torch>=2.4.0 for FSDP2",

    "fsdp": "full_shard auto_wrap",
    "fsdp_config": {
        "fsdp_version": 2,
        "auto_wrap_policy": "TRANSFORMER_BASED_WRAP",
        "cpu_ram_efficient_loading": true,
        "state_dict_type": "SHARDED_STATE_DICT",
        "limit_all_gathers": true
    }
}
